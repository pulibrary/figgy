<h1>File Manager</h1>
<ul class="breadcrumb">
  <li><%= link_to decorated_change_set_resource.first_title, solr_document_path(id: "#{@change_set.id}") %></li>
  <li class="active">File Manager</li>
</ul>
<div id="file-manager-extra-tools">
  <%= render "file_manager_extra_tools" %>
</div>
<div>
</div>
<% if !@children.empty? %>
  <div data-action="file-manager">
    <div class="col-md-12">
      <p class="text-muted">
        <em>Total files: <%= @change_set.member_ids.count %>
        <% if @change_set.respond_to?(:source_metadata_identifier) && @change_set.source_metadata_identifier.present? %>
          | BibId: <%= @change_set.source_metadata_identifier %>
        <% end %>
        </em>
      </p>
    </div>
    <div class="col-md-12">
      <%= render "file_manager_members" %>
    </div>
  </div>
<% end %>
