<% if breadcrumb_hierarchy.present? %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <% if root_breadcrumb %>
        <li class="breadcrumb-item"><%= root_breadcrumb %></li>
      <% end %>
      <% breadcrumb_hierarchy.each do |breadcrumb_resource| %>
        <li class="breadcrumb-item" dir='<%= breadcrumb_resource.first_title.to_s.dir %>'><%= link_to breadcrumb_resource.first_title, solr_document_path(id: "#{breadcrumb_resource.id}") %></li>
      <% end %>
      <li class="breadcrumb-item" dir='<%= decorated_resource.first_title.to_s.dir %>'><%= decorated_resource.first_title %></li>
    </ol>
  </nav>
<% end %>
