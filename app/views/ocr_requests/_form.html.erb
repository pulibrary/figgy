<%= simple_form_for(@ocr_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :filename %>
    <%= f.input :state %>
    <%= f.input :note %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
