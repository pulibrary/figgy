<div id="health-status">
  <a href="#" data-toggle="modal" data-target="#healthModal">
    <lux-icon-base icon-name="Healthy Report" icon-color="green">
      <lux-icon-report-healthy></lux-icon-report-healthy>
    </lux-icon-base>
    Preservation Status: Healthy
  </a>
  <div class="modal" tabindex="-1" role="dialog" id="healthModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Resource Health Report</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="check">
            <lux-icon-base width="50" height="50" icon-name="Healthy File" icon-color="green">
              <lux-icon-file-healthy></lux-icon-file-healthy>
            </lux-icon-base>
            <div class="check-status">
              <h6>Cloud Fixity Status: Healthy</h6>
              <small>The last Cloud Fixity check was performed on Mar 4, 2019.</small>
            </div>
          </div>
          <div class="check">
            <lux-icon-base width="50" height="50" icon-name="Unhealthy File" icon-color="red">
              <lux-icon-file-unhealthy></lux-icon-file-unhealthy>
            </lux-icon-base>
            <div class="check-status">
              <h6>Local Fixity Status: Needs Attention</h6>
              <small>One or more files failed Local Fixity Checks. Contact DLS.</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
