<div class="panel panel-default">
  <% if label.present? %>
    <% if label.eql?("Monograms")%>
      <%# when the page loads the monograms panel is collapsed %>
      <%# Monograms panel starts %>
      <div class="panel-heading">
        <a data-toggle = "collapse" href = "#collapseMonograms"><%= label %></a>
        <%= link_to 'New Monogram', new_numismatics_monogram_path, class: 'btn btn-sm btn-primary new-link', target: '_blank'%>
      </div>
      <div id = "collapseMonograms" class = "panel-collapse collapse">
         <div class = "panel-body">
           <%= render partial: 'form_metadata_inner', locals: { fields: fields, f: f } %>
         </div>
      </div>
      <%# Monograms panel ends %>
    <% else %>
      <div class="panel-heading"><%= label %></div>
      <%= render partial: 'form_metadata_inner', locals: { fields: fields, f: f } %>
    <% end %>
  <% else %>
    <div class="panel-heading">Metadata</div>
    <%= render partial: 'form_metadata_inner', locals: { fields: fields, f: f } %>
  <% end %>
</div>
