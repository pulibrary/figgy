<issue-monograms :members="<%= @numismatic_monogram_attributes.to_json %>"></issue-monograms>

<div class="panel panel-default">
  <div class="panel-heading">
    <label class="control-label string optional">Add a new Monogram</label>
  </div>
  <div class="panel-body">
    <div class="nested-numismatic-monogram-form">
      <issue-monogram-form></issue-monogram-form>
    </div>

    <div class="links">
      <%= link_to_add_association f, :numismatic_monogram, partial: 'numismatic_monogram_fields', force_non_association_create: true do %>
        <button type="button" class="btn btn-link add">
          <span class="glyphicon glyphicon-plus"></span>
          <span class="controls-add-text">Add another Monogram</span>
        </button>
      <% end %>
    </div>
  </div>
</div>
