<% content_for :head do %>
  <%= stylesheet_link_tag 'application' %>
<% end %>
<div id="loginContainer">
  <% if @charge_manager.eligible? %>
    <%= link_to 'Princeton Users: Log in to check out a digital copy', main_app.new_user_session_path, class: 'btn btn-primary', id: "login" %>
  <% elsif restricted_viewership? %>
    <h1>Please contact Special Collections staff through the <%= link_to "Ask Us! form", "https://library.princeton.edu/special-collections/ask-us", target: "_blank" %> for access to this collection. Use your Princeton credentials to login.</h1>
    <%= link_to 'Login', main_app.new_user_session_path, class: 'btn btn-primary', id: "login" %>
  <% else %>
    <%= link_to 'Princeton Users: Log in to View', main_app.new_user_session_path, class: 'btn btn-primary', id: "login" %>
  <% end %>
</div>
