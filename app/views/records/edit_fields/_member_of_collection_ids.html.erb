<% if !resource_has_parents?(f.object.resource, params) || f.object.kind_of?(EphemeraFolderChangeSetBase) %>
  <%= f.input :member_of_collection_ids,
              collection: @collections.sort_by { |title| title.to_s },
              label_method: :title,
              value_method: :id,
              input_html: { multiple: f.object.multiple?(key) },
              include_blank: false,
              required: f.object.required?(key) %>
<% end %>
