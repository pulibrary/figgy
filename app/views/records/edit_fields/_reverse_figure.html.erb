<div class="form-group">

  <label for="numismatics_issue_reverse_figure" class="control-label select optional">Reverse figure</label>
  <select class="form-control select2" id="numismatics_issue_reverse_figure" name="numismatics_issue[reverse_figure]">
    <option <% f.object.model.reverse_figure.blank? ? 'selected' : '' %>></option>
    <% @reverse_figures.each do |reverse_figure| %>
      <option <%= f.object.model.reverse_figure&.first == reverse_figure.value ? 'selected' : '' %> ><%= reverse_figure.value %></option>
    <% end %>
  </select>
</div>
