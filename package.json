{
  "name": "lux-rails",
  "private": true,
  "scripts": {
    "test": "jest --coverage"
  },
  "dependencies": {
    "@rails/webpacker": "https://github.com/rails/webpacker",
    "ajv": "^6.2.1",
    "apollo-boost": "^0.1.10",
    "axios": "^0.18.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "lux-design-system": "^2.0.0",
    "npm": "^6.4.0",
    "openseadragon": "^2.3.1",
    "page-label-generator": "^1.0.4",
    "path": "^0.12.7",
    "postcss-smart-import": "^0.7.6",
    "unfetch": "^4.0.1",
    "vue": "^2.5.17",
    "vue-loader": "^15.4.2",
    "vue-template-compiler": "^2.5.17",
    "vuex": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.0.0",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-7-jest": "^21.3.3",
    "babel-core": "^7.0.0-bridge",
    "babel-jest": "^23.6.0",
    "canvas": "^2.1.0",
    "canvas-prebuilt": "^2.0.0-alpha.14",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^1.1.0",
    "jest-serializer-vue": "^2.0.2",
    "vue-jest": "^3.0.0",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "roots": [
      "app/javascript/test"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "app/javascript/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "mapCoverage": true
  }
}
