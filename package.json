{
  "name": "filemanager-rails",
  "private": true,
  "scripts": {
    "unit": "jest valhalla/app/javascript/test/unit/specs --coverage",
    "test": "npm run unit"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>valhalla/app/javascript/$1"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "setupFiles": [
      "<rootDir>valhalla/app/javascript/test/setup"
    ],
    "mapCoverage": true,
    "coverageDirectory": "<rootDir>valhalla/app/javascript/test/unit/coverage",
    "collectCoverageFrom": [
      "valhalla/app/javascript/components/**/*.{js,vue}",
      "!valhalla/app/javascript/app.vue",
      "!valhalla/app/javascript/packs/filemanager.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "@rails/webpacker": "^3.0.2",
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "manifesto.js": "^2.2.0",
    "page-label-generator": "^1.0.4",
    "pluralize": "^7.0.0",
    "typings": "^2.1.1",
    "vue": "^2.5.3",
    "vue-flash": "^2.1.1",
    "vue-loader": "^13.5.0",
    "vue-template-compiler": "^2.5.3",
    "vuedraggable": "^2.14.1",
    "vuex": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.7",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-vue-preprocessor": "^1.3.1",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "vue-jest": "^1.0.3",
    "vue-test-utils": "^1.0.0-beta.4",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.0"
  }
}
