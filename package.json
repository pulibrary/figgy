{
  "name": "ordermanager-rails",
  "private": true,
  "scripts": {
    "unit": "jest app/javascript/test/unit/specs --coverage",
    "test": "npm run unit"
  },
  "jest": {
    "roots": [
      "<rootDir>",
      "<rootDir>/app/javascript/test"
    ],
    "modulePaths": [
      "<rootDir>/app/assets/images"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>app/javascript/$1",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "setupFiles": [
      "<rootDir>app/javascript/test/setup"
    ],
    "mapCoverage": true,
    "coverageDirectory": "<rootDir>app/javascript/test/unit/coverage",
    "collectCoverageFrom": [
      "app/javascript/components/**/*.{js,vue}",
      "app/javascript/store/vuex/**/*.{js,vue}",
      "app/javascript/mixins/**/*.{js,vue}",
      "!app/javascript/app.vue",
      "!app/javascript/packs/ordermanager.js",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "@rails/webpacker": "^3.3.1",
    "ajv": "^6.2.1",
    "apollo-boost": "^0.1.10",
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "lux-design-system": "0.0.4",
    "manifesto.js": "^2.2.24",
    "npm": "^6.0.0",
    "openseadragon": "^2.3.1",
    "page-label-generator": "^1.0.4",
    "pluralize": "^7.0.0",
    "postcss-smart-import": "^0.7.6",
    "vue": "^2.5.3",
    "vue-flash": "^2.1.1",
    "vue-loader": "^13.6.1",
    "vue-template-compiler": "^2.5.3",
    "vuedraggable": "^2.14.1",
    "vuex": "^2.4.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "canvas": "^1.6.11",
    "css-loader": "^0.28.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "jest-cli": "^23.2.0",
    "jest-vue-preprocessor": "^1.3.1",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "vue-jest": "^1.0.3",
    "vue-test-utils": "^1.0.0-beta.4",
    "webpack-dev-server": "^2.11.2",
    "webpack-merge": "^4.1.0"
  }
}
